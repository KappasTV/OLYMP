#include <iostream>
using namespace std;
int main() {
    string s;
    cin>>s;
    char c='0';
    int counter = 0;
    for (int i = 0; i < s.size(); ++i) {
        if(c<s[i])
        {
            counter=1;
            c = s[i];
        } else if(c>s[i])
        {
        } else
            counter++;
    }
    cout<<counter;
    return 0;
}

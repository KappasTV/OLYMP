#include <iostream>
using namespace std;
int main() {
    string s;
    cin>>s;
    bool res= true;
    for (int i = 0; i <s.size() ; ++i) {
        if(s[i]=='2' || s[i] == '0' || s[i]=='4' || s[i]=='6'||s[i]=='8')
            continue;
        else
            res = false;
    }
    if(res)
        cout<<"YES";
    else
        cout<<"NO";
    return 0;
}
